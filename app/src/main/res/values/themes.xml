<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/infinite_night</item>
        <item name="colorPrimaryVariant">@color/island_aqua</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nevada_sky</item>
        <item name="colorSecondaryVariant">@color/mint_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="FontRegular">
        <item name="fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontFamily">@font/ibm_plex_sans_semi_bold</item>
    </style>

    <style name="FontBold">
        <item name="fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="FontLight">
        <item name="fontFamily">@font/ibm_plex_sans_light</item>
    </style>

    <style name="FontMedium">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="fontFamily">@font/ibm_plex_sans_medium</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textAppearance">@style/FontSemiBold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

</resources>