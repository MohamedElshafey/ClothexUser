<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/infinite_night</item>
        <item name="colorPrimaryVariant">@color/infinite_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nevada_sky</item>
        <item name="colorSecondaryVariant">@color/mint_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:layoutDirection">ltr</item>-->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="FontRegular">
        <item name="fontFamily">@font/ibm_plex_sans_arabic_regular</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontFamily">@font/ibm_plex_sans_semi_arabic_bold</item>
    </style>

    <style name="FontBold">
        <item name="fontFamily">@font/ibm_plex_sans_arabic_bold</item>
    </style>

    <style name="FontLight">
        <item name="fontFamily">@font/ibm_plex_sans_arabic_light</item>
    </style>

    <style name="FontMedium">
        <item name="fontFamily">@font/ibm_plex_sans_arabic_medium</item>
    </style>

    <style name="TabFontMedium">
        <item name="fontFamily">@font/ibm_plex_sans_arabic_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textAppearance">@style/FontSemiBold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.MyApp.Chip.CategoryChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/category_chip_background</item>
        <item name="android:textAppearance">@style/FontSemiBold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Product" parent="">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Product.MyItem" parent="">
        <item name="cornerSize">13dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Shop" parent="">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Small.Image" parent="">
        <item name="cornerSize">@dimen/small_image_corner_size</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom sheet dialog theme -->
    <style name="DefaultBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DefaultBottomSheetStyle</item>
    </style>

    <style name="DefaultBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DefaultButtonTheme" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_bg_shape</item>
        <item name="android:backgroundTint">@color/button_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RemarkableButtonTheme" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_bg_shape</item>
        <item name="android:backgroundTint">@color/infinite_night</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DisableButtonTheme" parent="">
        <item name="android:background">@drawable/button_bg_shape</item>
        <item name="android:backgroundTint">@color/mercury</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <attr name="title" format="string" />

    <declare-styleable name="DefaultActionBar">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="ClothexCard">
        <attr name="title" />
        <attr name="headerText" format="string" />
        <attr name="hasStroke" format="boolean" />
        <attr name="icon" format="reference" />
        <attr name="cardBackground" format="reference" />
        <attr name="cardSize" format="enum">
            <enum name="small" value="0" />
            <enum name="normal" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BaseMessage">
        <attr name="title" />
        <attr name="description" format="string" />
        <attr name="android:icon" />
    </declare-styleable>

</resources>